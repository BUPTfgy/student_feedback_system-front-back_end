
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start; /* 修改为顶部对齐 */
	min-height: 100vh;
	padding: 40rpx;
	background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}
.logo {
	height: 180rpx;
	width: 180rpx;
	margin-top: 80rpx;
	margin-bottom: 40rpx;
	border-radius: 50%;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.text-area {
	display: flex;
	justify-content: center;
	margin-bottom: 60rpx;
}
.title {
	font-size: 40rpx;
	color: #4a5568;
	font-weight: 500;
}

/* 表单样式优化 */
.feedback-form {
	width: 100%;
	max-width: 600rpx;
	background: white;
	padding: 30rpx;
	border-radius: 20rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.form-item {
	margin-bottom: 40rpx;
	margin-right: 48rpx;
}
.label {
	font-size: 30rpx;
	color: #4a5568;
	margin-bottom: 12rpx;
	display: block;
	font-weight: 500;
}
.input, .textarea {
	width: 100%;
	border: 2rpx solid #e2e8f0;
	border-radius: 12rpx;
	padding: 20rpx;
	font-size: 28rpx;
	background: #f8fafc;
	transition: all 0.2s ease;
}
.input:focus, .textarea:focus {
	border-color: #4299e1;
	box-shadow: 0 0 0 3rpx rgba(66, 153, 225, 0.2);
}
.textarea {
	height: 200rpx;
}
.submit-btn {
	background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
	color: white;
	font-size: 32rpx;
	padding: 20rpx;
	border-radius: 12rpx;
	margin-top: 40rpx;
	box-shadow: 0 4rpx 12rpx rgba(66, 153, 225, 0.3);
	transition: all 0.2s ease;
}
.submit-btn:active {
	-webkit-transform: scale(0.98);
	        transform: scale(0.98);
	box-shadow: 0 2rpx 6rpx rgba(66, 153, 225, 0.3);
}

